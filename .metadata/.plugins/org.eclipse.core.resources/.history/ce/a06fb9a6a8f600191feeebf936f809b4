package tps.tp1;

import java.util.Scanner;

public class Convertisseur {

	public static void main(String[] args) {
		
		String menu = new String("CONVERTISSEUR DEGRES CELSIUS ET DEGRES FAHRENHEIT\n");
		menu += "-------------------------------------------------\n";
		menu += "Choisissez le mode de conversion : \n";
		menu += "1 - Convertisseur Celsius - Fahrenheit\n";
		menu += "2 - Convertisseur Fahrenheit - Celsius\n";
		
		Scanner sc = new Scanner(System.in);
		int choixMenu = 0;
		float temperatureAConvertir = 0.0f, temperatureConvertie = 0.0f;
		char reponse = ' ';
		
		do {
			System.out.println(menu);
			choixMenu = sc.nextInt();
			
			System.out.println("Temperature à convertir : ");
			sc.nextLine();
			temperatureAConvertir = sc.nextFloat();
			
			switch(choixMenu) {
			case 1:
				System.out.print("°C -> °F: \t");
				temperatureConvertie = (9 * temperatureAConvertir) / 5 + 32;
				System.out.println(temperatureAConvertir + " °C correspond à : " + temperatureConvertie + " °F.");
				break;
			case 2:
				System.out.print("°F -> °C: \t");
				temperatureConvertie = ((temperatureAConvertir - 32) * 5) / 9;
				System.out.println(temperatureAConvertir + " °F correspond à : " + temperatureConvertie + " °C.");
				break;
			default:
				System.out.println("Choix incorrect !");
			}
			
			sc.nextLine(); // OK
			do {
				System.out.println("Souhaitez-vous convertir une autre température ?(0/N)");
				//sc.nextLine(); plante à la suite de deux caractères
				reponse = sc.nextLine().charAt(0);
			}while(reponse != 'O' && reponse != 'N');
			
		}while(reponse == 'O');
		
		sc.close();
		System.out.println("Au revoir !");

	}

}
